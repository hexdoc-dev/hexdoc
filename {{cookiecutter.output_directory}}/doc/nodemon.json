{
    "watch": [
        "doc/src",
        "doc/resources",
        "doc/hexdoc.toml",
        "{{ 'common/src' if cookiecutter.multiloader else 'src' }}/main/resources/assets/*/lang"
    ],
    "ignore": ["**/generated/**"],
    "ext": "jinja,html,css,js,ts,toml,json,json5,py",
    "exec": "hexdoc serve --lang en_us --allow-missing"
}
