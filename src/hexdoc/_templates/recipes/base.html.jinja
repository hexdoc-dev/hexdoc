{% import "macros/images.html.jinja" as Images with context -%}

<div>
  {% block title %}
    <h5>{% block title_value -%}
      {{ recipe.result.item.name }}
    {%- endblock title_value %}</h5>
  {% endblock title %}

  {% block recipe %}
    <div class="{% block recipe_class %}{% endblock %}">
      {% block gui %}
        {{ Images.recipe_gui(recipe) }}
      {% endblock%}

      {% block content %}{% endblock %}
    </div>
  {% endblock recipe %}
</div>
