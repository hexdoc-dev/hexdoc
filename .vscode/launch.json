    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "hexdoc build",
            "type": "debugpy",
            "request": "launch",
            "module": "hexdoc",
            "args": [
                "build",
                // "--props",
                // "./submodules/HexMod/doc/hexdoc.toml",
                // "--release",
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            // "python": "${workspaceFolder}/.nox/mock_ci/Scripts/python.exe",
        },
        {
            "name": "hexdoc repl",
            "type": "debugpy",
            "request": "launch",
            "module": "hexdoc.cli.main",
            "args": [
                "repl",
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
    ]
}
